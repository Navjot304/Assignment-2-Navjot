<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= title %></h1>
            <form class="form" method="post">
              <div class="form-group">
                <label for="NameTextField">Name</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Contact Name" name="contactname" value="<%= contactslist.Name %>" required>
              </div>
              <div class="form-group">
                <label for="NumberTextField">Number</label>
                <input type="text" class="form-control" id="NumberTextField"
                placeholder="Contact Number" name="contactnumber" value="<%= contactslist.Number %>"  required>
              </div>
              <div class="form-group">
                <label for="EmailTextField">Email</label>
                <input type="text" class="form-control" id="EmailTextField"
                placeholder="Email Address" name="emailaddress" value="<%= contactslist.Email %>"  required>
              </div>
              
              <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/contactslist" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>
